<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChordGeneratorMAUI.Views.PurchasePage" BackgroundColor="{StaticResource Black}"
             Title="Upgrade">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>


        <!--MAIN-->
        <Border Grid.Column="1" Grid.Row="0" BackgroundColor="{StaticResource Black}" Padding="10,10,10,10" Margin="0,25,0,10" Stroke="{StaticResource Black}" StrokeThickness="0" Opacity="1">
            <Border.Shadow>
                <Shadow Offset="0,0" Brush="{StaticResource Primary}" Radius="100" Opacity="1"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10"></RoundRectangle>
            </Border.StrokeShape>

            <!--STAR IMAGE-->
            <VerticalStackLayout HorizontalOptions="Fill">
                <!--<Grid>
                    <Label Text="star" FontFamily="FA Pro Solid" TextColor="Goldenrod" Opacity="1" FontSize="64" HorizontalOptions="Center" HorizontalTextAlignment="Center">
                        <Label.Shadow>
                            <Shadow Offset="0,5" Brush="Black" Radius="5" Opacity=".8"/>
                        </Label.Shadow>
                    </Label>

                    --><!--<ImageButton BackgroundColor="{StaticResource Primary}" Source="chord_star_app_icon.png" HorizontalOptions="Center" WidthRequest="32" HeightRequest="32" 
                                 Opacity=".6" CornerRadius="100" Margin="0,0,0,27" Padding="0"></ImageButton>--><!--
                </Grid>-->

                <!--TITLE-->
                <HorizontalStackLayout Margin="0,20" HorizontalOptions="Center" Padding="15,0,0,0">
                    
                    <!--"Chord Star"-->
                    <Label Text="CHORD STAR" FontFamily="Gila" FontSize="28" HorizontalTextAlignment="Center" FontAttributes="None" TextColor="{StaticResource Tertiary}">
                        <Label.Shadow>
                            <Shadow Offset="0,2" Brush="{StaticResource MainGradientBrush}" Radius="1" Opacity=".5"/>
                        </Label.Shadow>
                    </Label>

                    <!--"PRO"-->
                    <Grid Margin="5,0">
                        <!--<Border StrokeThickness="0" Background="{StaticResource MainGradientBrush}" WidthRequest="50">
                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="30"></RoundRectangle>
                            </Border.StrokeShape>
                            <Border.Shadow>
                                <Shadow Offset="0,2" Brush="{StaticResource Black}" Radius="3" Opacity="1"/>
                            </Border.Shadow>
                        </Border>-->

                        <Label Text="Pro" FontFamily="Cintaly" FontSize="38" Padding="0" Opacity=".9" FontAttributes="Italic" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" TextColor="{StaticResource Secondary}">
                            <Label.Shadow>
                                <Shadow Offset="0,0" Brush="{StaticResource Secondary}" Radius="3" Opacity="1"/>
                            </Label.Shadow>
                        </Label>
                    </Grid>
                </HorizontalStackLayout>
                
                <!--SLOGAN-->
                <VerticalStackLayout Margin="0,0">
                    <Label Text="BECOME A PRO," FontFamily="Salmapro" HorizontalTextAlignment="Center" FontAttributes="None" TextColor="{StaticResource Secondary}" Opacity=".9" FontSize="21"/>
                    <Label Text="OUTSHINE THE STARS." FontFamily="Salmapro Narrow" HorizontalTextAlignment="Center" FontAttributes="Bold" TextColor="{StaticResource Secondary}" Opacity=".9" FontSize="26"/>
                    <Label Text="Only $3.99" FontFamily="Salmapro" HorizontalTextAlignment="Center" Margin="0,10,0,0" FontAttributes="Italic" TextColor="{StaticResource Secondary}" Opacity="1" FontSize="15"/>
                </VerticalStackLayout>

                <Border StrokeThickness="1" Stroke="{StaticResource White}" Opacity=".1" HeightRequest="3" HorizontalOptions="Fill" VerticalOptions="Center" Margin="0,10,0,20"></Border>

                <!--PERKS LIST-->
                <Grid Padding="10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <VerticalStackLayout Grid.Column="0" HorizontalOptions="Start">
                        
                        <!--NO ADS-->
                        <HorizontalStackLayout Margin="0,0,0,10">
                            <Label FontFamily="FA Pro Solid" Text="check-circle" TextColor="Green" FontSize="Small" Opacity="1"/>
                            <Label Text="No ads, ever!" Margin="10,0" TextColor="{StaticResource Secondary}"></Label>
                        </HorizontalStackLayout>

                        <!--UNLOCKED BPM-->
                        <HorizontalStackLayout Margin="0,10">
                            <Label FontFamily="FA Pro Solid" Text="check-circle" TextColor="Green" FontSize="Small" Opacity=".75"></Label>
                            <Label Text="BPM" Margin="10,0" TextColor="{StaticResource Secondary}"></Label>
                        </HorizontalStackLayout>

                        <!--TIME SIGNATURES-->
                        <HorizontalStackLayout Margin="0,10">
                            <Label FontFamily="FA Pro Solid" Text="check-circle" TextColor="Green" FontSize="Small" Opacity=".75"></Label>
                            <Label Text="Time Signatures" Margin="10,0" TextColor="{StaticResource Secondary}"></Label>
                        </HorizontalStackLayout>

                        <!-- CHORD TYPES: 6th, 9th, 13th-->
                        <HorizontalStackLayout Margin="0,10">
                            <Label FontFamily="FA Pro Solid" Text="check-circle" TextColor="Green" FontSize="Small" Opacity=".75"></Label>
                            <Label Text="More Chord Types (6th, 9th, 13th)" Margin="10,0" TextColor="{StaticResource Secondary}"></Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Column="1" HorizontalOptions="Start">

                    </VerticalStackLayout>
                </Grid>

                <!--$$$ PRICE $$$-->
                <!--<Label Text="Only $3.99!" VerticalOptions="End" HorizontalTextAlignment="Center" FontAttributes="None" TextColor="{StaticResource Black}" Margin="0,20,0,15" Opacity=".8" FontSize="15"/>-->

            </VerticalStackLayout>
        </Border>



        <!--DISCLAIMER, BUTTON, AND RESTORE PURCHASE-->
        <VerticalStackLayout Grid.ColumnSpan="3" Grid.Row="1" VerticalOptions="End">

            <!--DISCLAIMER-->
            <Label HorizontalTextAlignment="Center" HorizontalOptions="Center" FontSize="11" TextColor="White" Opacity=".6"
                     Text="Chord Star PRO membership is a one-time purchase. No recurring subscription required."/>

            <!--UPGRADE NOW BUTTON-->
            <Button Text="Upgrade Now" Margin="0,10,0,30" BackgroundColor="{StaticResource Tertiary}" TextColor="White" FontAttributes="Bold" HeightRequest="50">
                <Button.Shadow>
                    <Shadow Offset="0,0" Brush="{StaticResource Tertiary}" Radius="15" Opacity="1"/>
                </Button.Shadow>
            </Button>

            <!--RESTORE PURCHASE-->
            <Label Text="Already a Chord Star PRO member?" TextColor="White" HorizontalTextAlignment="Center" Opacity=".8"></Label>
            <Button Text="Restore Previous Purchase â†’" Background="Transparent" TextColor="CornflowerBlue" BorderWidth="0"></Button>
        </VerticalStackLayout>
    </Grid>


</ContentPage>