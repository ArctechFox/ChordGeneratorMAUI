<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:v="clr-namespace:ChordGeneratorMAUI.Views"
             x:Class="ChordGeneratorMAUI.MainPage" BackgroundColor="#001530">

	<ContentPage.Resources>
		<ResourceDictionary>
			<Style TargetType="Border">
				<Setter Property="Stroke" Value="Purple"></Setter>
				<Setter Property="StrokeThickness" Value="2"></Setter>
			</Style>

			<Style TargetType="Label">
				<Setter Property="FontSize" Value="{OnPlatform iOS=24, Android=26, WinUI=48, MacCatalyst=48}"></Setter>
				<Setter Property="TextColor" Value="White"></Setter>
				<Setter Property="Opacity" Value="1"></Setter>
				<Setter Property="HorizontalOptions" Value="Center"></Setter>
				<Setter Property="VerticalOptions" Value="Center"></Setter>
				<Setter Property="HorizontalTextAlignment" Value="Center"></Setter>
				<Setter Property="VerticalTextAlignment" Value="Center"></Setter>
				<Setter Property="Margin" Value="20"></Setter>
			</Style>
		</ResourceDictionary>
	</ContentPage.Resources>

	<Grid Margin="20,20,20,0">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		
		<v:Metronome Grid.Row="0"></v:Metronome>

		<!--CHART-->
		<ContentView>
			
		</ContentView>
		
		<!--<CollectionView Grid.Row="1" ItemsSource="{Binding ChordChart}" ItemsLayout="VerticalGrid, 4" VerticalOptions="Fill">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Border Stroke="Purple" Padding="0,10">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>

							--><!--CHORD NAME--><!--
							<Label Grid.Row="0" FontSize="Medium" Margin="0" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" FontFamily="MusicAnalysis" Text="{Binding Name}"></Label>

							--><!--SHEET MUSIC--><!--
							<Label Grid.Row="1" FontSize="62" Margin="0" HorizontalOptions="Fill" FontFamily="Lassus" Text="44444444444" FontAttributes="Bold" Opacity="1" />
							<Label Grid.Row="1" FontSize="62" Margin="0" HorizontalOptions="Fill" FontFamily="Lassus" Text="{Binding Name}" FontAttributes="Bold" Opacity="1"/>
						</Grid>
					</Border>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>-->
		

		<!--BOTTOM-->
		<Grid Grid.Row="2" HeightRequest="80" Margin="0,10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition Width="*"></ColumnDefinition>
				<ColumnDefinition Width=".5*"></ColumnDefinition>
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0" Margin="0,0,10,0" Background="Transparent"  BorderColor="Red" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Text="RESET"
					Command="{Binding ResetCommand}"></Button>

			<Button Grid.Column="1" Background="Transparent" BorderColor="Gray" TextColor="White" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Text="PAUSE"
					Command="{Binding PauseToggleCommand}">
				<Button.Triggers>
					<DataTrigger TargetType="Button" Binding="{Binding IsPaused}" Value="True">
						<Setter Property="Text" Value="PLAY"></Setter>
						<Setter Property="BorderColor" Value="Green"></Setter>
						<Setter Property="Background" Value="Green"></Setter>
						<Setter Property="BorderWidth" Value="3"></Setter>
					</DataTrigger>
					<DataTrigger TargetType="Button" Binding="{Binding IsChordChartActive}" Value="False">
						<Setter Property="IsEnabled" Value="False"></Setter>
						<Setter Property="Opacity" Value=".3"></Setter>
					</DataTrigger>
				</Button.Triggers>
			</Button>

			<Button Grid.Column="2" Margin="10,0,0,0" Background="Teal" TextColor="#001530" FontAttributes="Bold" FontSize="Large" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Text="GENERATE"
					Command="{Binding GenerateChordsCommand}"></Button>
		</Grid>
	</Grid>

</ContentPage>
